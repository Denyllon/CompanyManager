<p id="notice"><%= notice %></p>

<h1>Listing Employees</h1>

<table class="table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company<th>
      <th>Job</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.company.name %>
        <td><%= employee.job %></td>
        <td><%= link_to 'Show', company_employee_path(employee.company, employee), class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_company_employee_path(employee.company, employee), class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', company_employee_path(employee.company, employee), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

