<table class="table">
  <thead>
    <tr>
      <th>Name:</th>
      <th>Job:</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @employee.name %></td>
      <td><%= @employee.job %></td>
  </tbody>
</table>

<%= link_to 'Edit', edit_company_employee_path(@company, @employee), class: "btn btn-default" %>
