<p id="notice"><%= notice %></p>

<h1>Listing Companies</h1>

<table class="table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.description %></td>
        <td><%= link_to 'Show', company, :class => "btn btn-default" %>
        <%= link_to 'Edit', edit_company_path(company), :class => "btn btn-default" %>
        <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path, :class => "btn btn-primary" %>
